<%= render 'admin/list_entities/menu', entity_active: :index %>

<section>
    <h1><%= icon_tag 'actions/index-black' %> Index of List Entities</h1>

    <table>
        <thead>
            <th>Name</th>
            <th>Description</th>
            <th>Listings</th>
            <th>Actions</th>
        </thead>
        <tbody>
            <% @entities.each do |entity| %>
                <tr>
                    <td class="name"><%= entity.name %></td>
                    <td><%= entity.description %></td>
                    <td><%= entity.listings.count %></td>
                    <td class="actions">
                        <%= link_to sm_icon_tag('actions/show-black'), admin_list_entity_path(entity) %>
                        <%= link_to sm_icon_tag('actions/edit-black'), edit_admin_list_entity_path(entity) %>
                        <%= link_to_destroy sm_icon_tag('actions/destroy-black'), admin_list_entity_path(entity) %>
                    </td>
                </tr>
            <% end %>
            <tr>
                <td></td><td></td><td></td>
                <td class="actions">
                    <%= link_to new_admin_list_entity_path do %>
                        <%= icon_tag('actions/create-black') %> New Entity
                    <% end %>
                </td>
            </tr>
        </tbody>
    </table>
</section>
