<% entity ||= nil %>
<% entity_active ||= nil %>
<% listing_active ||= nil %>

<%= render 'admin/menu', active: :list_entity %>

<section id="admin-list-entities-menu" class="menu">
    <span class="title">List Entities</span>
    <%= link_to sm_icon_tag('actions/index-black') , admin_list_entities_path  , class: active_class(entity_active, :index) %>
    <%= link_to sm_icon_tag('actions/create-black'), new_admin_list_entity_path, class: active_class(entity_active, :new) %>

    <% unless entity.nil? || entity.id.nil? %>
        <span class="title"><small>List Entity<br>&lsquo;<%= entity.name %>&rsquo;</small></span>
        <%= link_to         sm_icon_tag('actions/show-black')      , admin_list_entity_path(entity)            , class: active_class(entity_active, :show)%>
        <%= link_to         sm_icon_tag('actions/edit-black')      , edit_admin_list_entity_path(entity)       , class: active_class(entity_active, :edit)%>
        <%= link_to_destroy sm_icon_tag('actions/destroy-black')   , admin_list_entity_path(entity)            %>
        <%= link_to         sm_icon_tag('actions/create-black')    , new_admin_list_entity_listing_path(entity), class: active_class(listing_active, :new) %>
    <% end %>
</section>
