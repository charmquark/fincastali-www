<%= render 'admin/lists/menu', list_active: :index %>
<section>
    <h1><%= icon_tag 'actions/index-black' %> Index of Lists</h1>

    <table>
        <thead>
            <th>Name</th>
            <th>Tag</th>
            <th>Description</th>
            <th>Actions</th>
        </thead>
        <tbody>
            <% @lists.each do |list| %>
                <tr>
                    <td class="name"><%= list.name %></td>
                    <td><%= list.tag %></td>
                    <td><%= list.short_description %></td>
                    <td class="actions">
                        <%= link_to sm_icon_tag('actions/show-black'), admin_list_path(list) %>
                        <%= link_to sm_icon_tag('actions/edit-black'), edit_admin_list_path(list) %>
                        <%= link_to sm_icon_tag('actions/destroy-black'), '#' %>
                    </td>
                </tr>
            <% end %>
            <tr>
                <td></td><td></td><td></td>
                <td class="actions">
                    <%= link_to new_admin_list_path do %>
                        <%= icon_tag 'actions/create-black' %> New List
                    <% end %>
                </td>
            </tr>
        </tbody>
    </table>
</section>
