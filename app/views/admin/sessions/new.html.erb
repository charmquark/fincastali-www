<section>
    <p class="big">You must log in to continue.</p>

    <%= form_tag admin_process_login_path do %>
        <div class="field">
            <%= label_tag :password %>
            <%= password_field_tag :password %>
        </div>
        <div class="actions">
            <%= submit_tag 'Login' %>
            <%= link_to 'Cancel', root_url %>
        </div>
    <% end -%>
</section>