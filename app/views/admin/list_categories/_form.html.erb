<%= form.hidden_field :list_id %>
<div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: 'Display name' %>
    <div class="errors">
        <% unless category.errors[:name].empty? %>
            <%= category.errors[:name][0] %>
        <% end %>
        &nbsp;
    </div>
</div>
<div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, placeholder: 'Describe the new category for future reference' %>
    <div class="errors">
        <% unless category.errors[:description].empty? %>
            <%= category.errors[:description][0] %>
        <% end %>
        &nbsp;
    </div>
</div>
